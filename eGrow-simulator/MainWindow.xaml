<Window x:Class="eGrow_simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eGrow_simulator"
        mc:Ignorable="d"
        Title="eGrow" ResizeMode="NoResize" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="470"/>

        </Grid.ColumnDefinitions>
        
        <!-- Column 1 -->
        <Image Source="/Resources/Pod.png" Name="ImgPodRastlina" Grid.Column="0" Margin="-10,0,8,0" />
        <Image Source="/Resources/PodHeater.png" Name="ImgPodGrelec" Grid.Column="0" Margin="-10,0,8,0" />
        <Image Source="/Resources/PodLights.png" Name="ImgPodLucke" Grid.Column="0" Margin="-10,0,8,0" />

        <!-- Column 2 -->
        <Label Grid.Column="1" Content="Control Panel" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Button Grid.Column="1" Content="Simuliraj" HorizontalAlignment="Left" Margin="292,383,0,0" VerticalAlignment="Top" FontWeight="Normal" Height="22" Width="69" Click="BtnSimuliraj_Click"/>
        <Button Grid.Column="1" Content="Zapri" HorizontalAlignment="Left" Margin="366,383,0,0" VerticalAlignment="Top" FontWeight="Normal" Height="22" Width="69" Click="BtnZapri_Click"/>

    </Grid>

</Window>
